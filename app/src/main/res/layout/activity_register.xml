<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:text="TRAVISOR"
        android:textColor="#27752A"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:fontFamily="casual"
        android:text="Create New Account"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="120dp"
        android:background="#987AA5"
        android:ems="20"
        android:fontFamily="@font/aclonica"
        android:hint="USER_NAME"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#2196F3"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:inputType="textEmailAddress"
        android:layout_marginTop="180dp"
        android:hint="E-MAIL"
        android:padding="10dp"
        android:textColor="#2196F3"
        android:textSize="13sp"
        android:background="#987AA5"
        android:fontFamily="@font/aclonica"
        />

    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:inputType="textPassword"
        android:layout_marginTop="240dp"
        android:padding="10dp"
        android:textColor="#2196F3"
        android:textSize="13sp"
        android:background="#987AA5"
        android:fontFamily="@font/aclonica"
        android:hint="PASSWORD"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/sp2"
        android:alpha=".5"
        android:padding="5dp"
        android:layout_marginLeft="300dp"
        android:onClick="Sh"
        android:id="@+id/sp"
        />
    <EditText
        android:id="@+id/et4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:inputType="textPassword"
        android:layout_marginTop="300dp"
        android:padding="10dp"
        android:textColor="#2196F3"
        android:textSize="13sp"
        android:background="#987AA5"
        android:fontFamily="@font/aclonica"
        android:hint="CONFIRM_PASSWORD"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/sp2"
        android:alpha=".5"
        android:padding="5dp"
        android:layout_marginLeft="300dp"
        android:onClick="Sh1"
        android:id="@+id/sp12"
        />
    <EditText
        android:id="@+id/et5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:inputType="phone"
        android:layout_marginTop="360dp"
        android:padding="10dp"
        android:textColor="#2196F3"
        android:textSize="13sp"
        android:background="#987AA5"
        android:fontFamily="@font/aclonica"
        android:hint="MOBLE_NO"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:id="@+id/rg">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textColor="#E64A19"
            android:textSize="20dp"
            android:padding="16dp"
            />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business"
            android:textColor="#E64A19"
            android:textSize="20dp"
            android:padding="16dp"
            />

    </RadioGroup>

    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="515dp"
        android:text="Register"
        app:backgroundTint="#F44336"
        android:padding="25dp"
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Registered? "
        android:layout_marginLeft="50dp"
        android:layout_marginTop="635dp"
        android:textColor="#D32F2F"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="237dp"
        android:layout_marginTop="625dp"
        android:padding="-10dp"
        android:text="Log In"
        app:backgroundTint="#9C27B0"></Button>

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="640dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:textStyle="bold"/>



</RelativeLayout>